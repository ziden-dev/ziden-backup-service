  "paths": {
    "/api/backup": {
      "post": {
        "tags": [
          "backup"
        ],
        "summary": "Upload data encrypt",
        "description": "User upload data encrypted by user's publicKey",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "ZIDEN",
                "EUENO"
              ],
              "default": "ZIDEN",
              "description": "Type of Storage"
            },
            "required": true
          }
        ],
        "requestBody": {
          "description": "Your data encrypted by your publicKey",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DataEncrypt"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "API response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "claimId": {
                      "type": "string",
                      "description": "Unique Id of Claim",
                      "example": "1234"
                    },
                    "accessUri": {
                      "type": "string",
                      "description": "Access Uri to get your data",
                      "example": "https://example.access.uri"
                    },
                    "storageId": {
                      "type": "string",
                      "description": "Storage type",
                      "example": "1234"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "backup"
        ],
        "summary": "Get all Data",
        "description": "Get all data encrypt by Holder",
        "parameters": [
          {
            "name": "holderId",
            "in": "query",
            "description": "DID of Holder",
            "schema": {
              "type": "string",
              "example": "123"
            }
          },
          {
            "name": "issuerId",
            "in": "query",
            "description": "DID of Issuer",
            "schema": {
              "type": "string",
              "example": "123"
            }
          },
          {
            "name": "claimId",
            "in": "query",
            "description": "Unique Id of Claim",
            "schema": {
              "type": "string",
              "example": "123"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "API response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "claimId": {
                        "type": "string",
                        "description": "Unique Id of Claim",
                        "example": "1234"
                      },
                      "accessUri": {
                        "type": "string",
                        "description": "Access Uri to get your data",
                        "example": "https://example.access.uri"
                      },
                      "storageId": {
                        "type": "string",
                        "description": "Storage type",
                        "example": "1234"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
